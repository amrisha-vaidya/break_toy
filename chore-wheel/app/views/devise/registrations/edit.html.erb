<div class="row">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%= devise_error_messages! %>
  <div class= "col-md-6 col-md-offset-3">
    <div class = "row ">
      <div class = "col-md-8 col-md-offset-2">
        <div class="panel panel-primary">
          <div class"panel-heading">
            <h3>Edit<%= resource_name.to_s.humanize %></h3>
          </div>

          <div class="panel-body">
            <%= render "layouts/flash_notice" %>
            <div class="form-group">
              <div class="input-group input-group-lg">
                <%= f.text_field :first_name, placeholder: "First Name", autofocus: true %>
              </div>
            </div>

            <div class="form-group">
              <div class="input-group input-group-lg">
                  <%= f.text_field :last_name, placeholder: "Last Name", autofocus: true %>
              </div>
            </div>

            <div class="form-group">
              <div class="input-group input-group-lg">
                <label> Please add your phone number to receive reminders! </label>
                  <%= f.text_field :phone_number, placeholder: "eg. 1234567890", autofocus: true %>
              </div>
            </div>


            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="form-group">
              <div class="input-group input-group-lg">
                <label>(leave blank if you don;t want to change it)</label>
                <%= f.password_field :password, placeholder: "New Password", autocomplete: "off" %>
                  <% if @minimum_password_length %>
                    <em><%= @minimum_password_length %> characters minimum</em>
                  <% end %>
              </div>
            </div>

            <div class="form-group">
              <div class="input-group input-group-lg">
                <%= f.password_field :password_confirmation, placeholder: "Confirm Password", autocomplete: "off" %>
              </div>
            </div>

            <div class="form-group">
              <div class="input-group input-group-lg">
                <%= f.password_field :current_password, placeholder: "Current Password", autocomplete: "off" %>
              </div>
            </div>

            <div class="panel-footer">
              <p class="text-center"><%= f.submit "Update" %>  </p>
            </div>
          </div>
        </div>
        <% end %>

      </div>
    </div>
  </div>
</div>



<%= link_to "Back", :back %>
