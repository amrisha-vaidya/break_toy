<div class="row">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%= devise_error_messages! %>
  <div class= "large-6 columns ">
    <p class="text-left">Edit<%= resource_name.to_s.humanize %></p>
    <div class = "row ">
      <div class="large-12 columns">
        <div class="edit-profile">
            <div class="row ">
              <div class="large-12 large-centered columns">
                  <%= f.text_field :first_name, placeholder: "First Name", autofocus: true %>
              </div>
            </div>
            <div class="row collapse">
              <div class="large-12 large-centered columns">
                  <%= f.text_field :last_name, placeholder: "Last Name", autofocus: true %>
              </div>
            </div>

            <div class="row collapse">
              <div class="large-12 large-centered columns">
                <label> Please add your phone number to receive reminders! </label>
                  <%= f.text_field :phone_number, placeholder: "eg. 1234567890", autofocus: true %>
              </div>
            </div>


            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="row collapse">
              <div class="large-12 large-centered columns">
                <label>(leave blank if you don;t want to change it)</label>
                <%= f.password_field :password, placeholder: "New Password", autocomplete: "off" %>
                  <% if @minimum_password_length %>
                    <em><%= @minimum_password_length %> characters minimum</em>
                  <% end %>
              </div>
            </div>

            <div class="row collapse">
              <div class="large-12 large-centered columns">
                <%= f.password_field :password_confirmation, placeholder: "Confirm Password", autocomplete: "off" %>
              </div>
            </div>

            <div class="row collapse">
              <div class="small-12 large-centered columns">
                <%= f.password_field :current_password, placeholder: "Current Password", autocomplete: "off" %>
              </div>
            </div>

            <div class="row collapse">
              <div class="large-offset-2 large-8 large-centered columns">
                <div class="row collapse">
                  <div class="large-offset-5 large-2">
                    <%= f.submit "Update" %>
                  </div>
                </div>
              </div>
            </div>

            <div class= "row collapse">
              <br />
            </div>



          </div>
        </div>
      </div>
    </div>

    <div class="large-6 columns">
      <div class="row">
        <div class="large-12 columns">
          <div class="edit-profile">
            <div class="row">
              <div class="large-12 large-centered columns">
                <%= f.file_field :avatar, placeholder: "Add Avatar" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>


  <% end %>

  <div class="row collapse">
    <div class="large-offset-2 large-8 large-centered columns">
      <div class="row collapse">
        <div class="large-offset-4 large-4">
          <p class="text-center"> Unhappy? </p>
          <p class="text-center"> <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %> </p>
        </div>
      </div>
    </div>
  </div>

</div>

<%= link_to "Back", :back %>
