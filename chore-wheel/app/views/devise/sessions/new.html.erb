<div id="landing">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="container">
      <div class="row">
          <div class="col-md-6 col-md-offset-3" style = "border:1px solid #FFF">

             <div class="form-group">
              <div class="input-group input-group-lg">
              <span  class = "input-group-addon" id = "usericonemail"><i class="fa fa-envelope-o" aria-hidden="true"></i></span>
              <%= f.email_field :email, placeholder: "Email", autofocus: true,  class: "form-control", id: "useremail" %>
              </div>
            </div>

             <div class="form-group">
              <div class="input-group input-group-lg">
              <span  class = "input-group-addon" ><i class="fa fa-key" aria-hidden="true"></i></span>
              <%= f.password_field :password, placeholder: "Password", autofocus: true, class: "form-control"%>
              </div>
            </div>

             <div class="form-group">
              <div class="input-group input-group-lg">
                <% if devise_mapping.rememberable? -%>
                <label><input type="checkbox"> Remember me</label>
                <% end %>
              </div>
            </div>

            <div class="form-group">
              <div class="input-group input-group-lg">
                <button><%= f.submit "Log in" %></button>
              </div>
            </div>

            <div class="form-group text-white">
                <%= render "devise/shared/links" %>
            </div>


          </div>
        </div>
  	</div>
  <% end %>
</div>
