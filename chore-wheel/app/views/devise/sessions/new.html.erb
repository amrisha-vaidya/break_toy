<div id="landing">
  <div class="hero">
    <div class="hero-overlay">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <br />
        <div class="container">
          <div class="row">
              <div class="col-md-6 col-md-offset-3" >
                <div class='row'>
                  <div class="col-md-8 col-md-offset-2" >
                    <div class="panel panel-default panel-transparent">
                      <div class="panel-heading text-center">
                        <h4 class="text-white">Log In</h4>
                      </div>

                      <div class="panel-body">
                        <%= render "layouts/flash_notice" %>
                         <div class="form-group">
                          <div class="input-group input-group-lg transparent-input">
                          <span  class = "input-group-addon transparent-input" id = "usericonemail"><i class="fa fa-envelope-o text-white" aria-hidden="true"></i></span>
                          <%= f.email_field :email, placeholder: "Email", autofocus: true,  class: "form-control text-white transparent-input", id: "useremail" %>
                          </div>
                        </div>

                         <div class="form-group">
                          <div class="input-group input-group-lg transparent-input">
                          <span  class = "input-group-addon transparent-input" ><i class="fa fa-key text-white" aria-hidden="true"></i></span>
                          <%= f.password_field :password, placeholder: "Password", autofocus: true, class: "form-control text-white transparent-input"%>
                          </div>
                        </div>

                        <div class="col-md-4 col-md-offset-4 text-center">
                           <div class="form-group">
                            <div class="input-group input-group-lg">
                              <% if devise_mapping.rememberable? -%>
                              <small class="text-white"><input type="checkbox"> Remember me</small>
                              <% end %>
                            </div>
                          </div>
                        </div>

                        <div class="col-md-6 col-md-offset-3 text-center">
                          <div class="form-group">
                            <div class="input-group input-group-lg text-center">
                              <%= f.submit "Log In", class:" login-link" %>
                            </div>
                          </div>
                        </div>

                      </div>
                      <div class="panel-footer transparent-input">
                        <p class="text-center text-white"> New? Create an Account <br /><%= render "devise/shared/links" %> </p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
        	</div>
        <% end %>
      </div>
    </div>
  </div>
</div>
