<div id="landing">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <br />
    <div class="container">
      <div class="row">
          <div class="col-md-6 col-md-offset-3" >
            <div class='row'>
              <div class="col-md-8 col-md-offset-2" >
                <div class="panel panel-primary">
                  <div class="panel-heading text-center">
                    <h4>Log In</h4>
                  </div>

                  <div class="panel-body">
                    <%= render "layouts/flash_notice" %>
                     <div class="form-group">
                      <div class="input-group input-group-lg">
                      <span  class = "input-group-addon" id = "usericonemail"><i class="fa fa-envelope-o" aria-hidden="true"></i></span>
                      <%= f.email_field :email, placeholder: "Email", autofocus: true,  class: "form-control", id: "useremail" %>
                      </div>
                    </div>

                     <div class="form-group">
                      <div class="input-group input-group-lg">
                      <span  class = "input-group-addon" ><i class="fa fa-key" aria-hidden="true"></i></span>
                      <%= f.password_field :password, placeholder: "Password", autofocus: true, class: "form-control"%>
                      </div>
                    </div>

                    <div class="col-md-6 col-md-offset-3 text-center">
                       <div class="form-group">
                        <div class="input-group input-group-lg">
                          <% if devise_mapping.rememberable? -%>
                          <label><input type="checkbox"> Remember me</label>
                          <% end %>
                        </div>
                      </div>
                    </div>

                    <div class="col-md-4 col-md-offset-4 text-center">
                      <div class="form-group">
                        <div class="input-group input-group-lg text-center">
                          <%= f.submit "Log In", class:"btn btn-primary" %>
                        </div>
                      </div>
                    </div>

                  </div>
                  <div class="panel-footer">
                    <p class='text-center'> New? Create an Account <br /><%= render "devise/shared/links" %> </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
    	</div>
    <% end %>
  </div>
</div>
